#:kivy 1.9.0

<BookItem>:
    # height: '90sp'
    # size_hint_y: None
    canvas:
        Color:
            rgb: .3, .9, .9
        Rectangle:
            pos: self.pos
            size: self.width, 1
    # width: '90sp'

    BoxLayout:
        orientation: 'vertical'
        padding: '5dp'

        Button:
            text: 'image here'
            # size_hint_x: None
            # width: self.height
            # on_release: app.edit_note(root.note_index)

        Label:
            text: root.book_title

RootWidget:
    container: container
    BookWidget:
        RecycleView:
            id: container
            data: app.book_store.data_for_widgets
            viewclass: 'BookItem'
            RecycleGridLayout:
                cols: 3
                col_default_width: self.width / 3
                # default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                # height: '180sp'
                # width: '90sp'
                # orientation: 'vertical'
                spacing: dp(2)

