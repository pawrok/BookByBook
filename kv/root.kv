#:kivy 1.9
RootWidget:
    upper_container: uppermenu
    bottom_container: bottommenu
    home_container: home
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'

        BoxLayout:
            id: home
            orientation: 'vertical'
            
            BoxLayout:
                canvas:
                    Color:
                        rgb: .7, .3, .3
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: 0.1
                Label:
                    text: "Bookcase App"

            GridLayout:
                size_hint_y: 0.1
                cols:3
                Button:
                    text: "Books"
                    on_release: app.next_screen('books')
                Button:
                    text: "Shelves"
                    on_release: app.next_screen('shelves')
                Button:
                    text: "Tags"
                    on_release: app.next_screen('tags')

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                TextInput:
                    multiline: False
                    size_hint_x: 0.8
                Button:
                    text: "Sort"
                    size_hint_x: None

            BoxLayout:
                # container for Books, shelves, tags content
                id: uppermenu
                Label:
                    text: "Hello"

        BoxLayout:
            # container for home, stats, addnote, wish, settings
            id: bottommenu
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            canvas:
                Color:
                    rgb: .9, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "not loaded correctly"
