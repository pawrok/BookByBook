#:kivy 1.9
RootWidget:
    container: container
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            canvas:
                Color:
                    rgb: .7, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 0.1
            Label:
                text: "Bookcase App"

        GridLayout:
            size_hint_y: 0.1
            cols:3
            Button:
                text: "Books"
                on_release: app.next_screen('books')
            Button:
                text: "Shelves"
                on_release: app.next_screen('shelves')
            Button:
                text: "Tags"
                on_release: app.next_screen('tags')

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            TextInput:
                multiline: False
                size_hint_x: 0.8
            Button:
                text: "Sort"
                size_hint_x: None

        BoxLayout:
            # container for Books, shelves, tags content
            id: container
            Label:
                text: "Hello"

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '48dp'
            padding: '5dp'
            canvas:
                Color:
                    rgb: .3, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Home'
                width: self.height
                # on_release: app.go_notes()

            Button:
                text: 'Stats'
                width: self.height
                # on_release: app.go_notes()

            Button:
                text: '+'
                width: self.height
                # on_release: app.go_notes()

            Button:
                text: 'Wishlist'
                width: self.height
                # on_release: app.go_notes()

            Button:
                text: 'Settings'
                # size_hint_x: None
                width: self.height
                # on_release: app.go_notes()
