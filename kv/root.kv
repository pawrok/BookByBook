#:kivy 1.9
RootWidget:
    # upper_container: uppermenu.__self__
    # home_content: home_contentx.__self__
    middle_container: middle
    # BoxLayout:
    size: root.width, root.height
    orientation: 'vertical'

    BoxLayout:
        id: top_panel
        canvas:
            Color:
                rgb: .7, .3, .3
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: 0.1
        Label:
            text: "Bookcase App"

    HomeWidget:
        id: middle
        orientation: 'vertical'

        Label:
            text: "middle_container not loaded"

    BoxLayout:
        # container for home, stats, addnote, wish, settings
        id: bottommenu
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        padding: '5dp'
        canvas:
            Color:
                rgb: .3, .3, .3
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: 'Home'
            width: self.height
            on_release: app.create_home()

        Button:
            text: 'Stats'
            width: self.height
            # on_release: app.go_notes()

        Button:
            text: '+'
            width: self.height
            on_release: app.create_newbookmenu()

        Button:
            text: 'Wishlist'
            width: self.height
            # on_release: app.go_notes()

        Button:
            text: 'Settings'
            width: self.height
            # on_release: app.go_notes()
