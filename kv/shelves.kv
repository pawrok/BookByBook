#:kivy 1.9.0

<ShelfItem>:
    canvas:
        Color:
            rgb: .3, .4, .9
        Rectangle:
            pos: self.pos
            size: self.width, 1

    BoxLayout:
        orientation: 'horizontal'
        padding: '5dp'

        Button:
            text: root.shelf_title
            # size_hint_x: None
            # width: self.height
            # on_release: app.edit_note(root.note_index)

RootWidget:
    ShelfWidget:
        RecycleView:
            id: uppermenu
            data: app.shelf_store.data_for_widgets
            viewclass: 'ShelfItem'
            RecycleBoxLayout:
                col_default_width: self.width / 3
                default_size_hint: 1, None
                size_hint_y: None
                orientation: 'vertical'
                spacing: dp(2)

