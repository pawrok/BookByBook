#:kivy 1.9

RootWidget:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            name: "top"
            orientation: 'horizontal'
            canvas:
                Color:
                    rgb: .1, .3, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "img here"
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "stars here"
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: "read"
                    Label:
                        text: "fav"
        
        BoxLayout:
            name: 'middle'
            orientation: 'vertical'
            Label:
                text: "title"
            Label:
                text: "author"
            Label:
                text: "shelve"
            Label:
                text: "lang"
            Label:
                text: "pages"

        BoxLayout:
            orientation: 'vertical'
            name: 'bottom'
            Label:
                text: "pages"
            Label:
                text: "empty"
