#:kivy 1.9

RootWidget:
    BoxLayout:
        id: bottommenu
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        padding: '5dp'
        canvas:
            Color:
                rgb: .3, .3, .3
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: 'Home'
            width: self.height
            on_release: app.home_return()

        Button:
            text: 'Stats'
            width: self.height
            # on_release: app.go_notes()

        Button:
            text: '+'
            width: self.height
            on_release: app.create_newbookmenu()

        Button:
            text: 'Wishlist'
            width: self.height
            # on_release: app.go_notes()

        Button:
            text: 'Settings'
            width: self.height
            # on_release: app.go_notes()
