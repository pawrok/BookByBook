#:kivy 1.9
RootWidget:
    # upper_container: uppermenu.__self__
    # bottom_container: bottommenu
    # home_content: home_contentx.__self__
    middle_container: middle
    # BoxLayout:
    #     size: root.width, root.height
    #     orientation: 'vertical'

    HomeWidget:
        id: middle
        home_content: home_contentx
        orientation: 'vertical'

        GridLayout:
            id: upper_menu
            size_hint_y: 0.1
            cols:3
            Button:
                text: "Books"
                on_release: app.next_screen('books')
            Button:
                text: "Shelves"
                on_release: app.next_screen('shelves')
            Button:
                text: "Tags"
                on_release: app.next_screen('tags')

        BoxLayout:
            id: search_sort_menu
            orientation: 'horizontal'
            size_hint_y: 0.1
            TextInput:
                multiline: False
                size_hint_x: 0.8
            Button:
                text: "Sort"
                size_hint_x: None

        BoxLayout:
            # container for Books, shelves, tags content
            id: home_contentx
            Label:
                text: "home container loaded"
